<% context ||= 'default' %>

<section class="call-to-action <%= context == 'home' %>%">
  <div class="container py-5">
    <div class="row align-items-end text-md-start py-3">
      <div class="col-lg-6">
        <h3 class="cta-title"><%= t('account.modal.title') %></h3>
        <p class="mt-4 d-none d-md-block">
        <ul>
          <% t('login.not_registered_yet_details.list').each do |item| %>
            <li ><%= sanitize item %></li>
          <% end %>
        </ul>
        </p>
      </div>
      <div class="col-lg-3 offset-lg-2 mt-3 mt-lg-0">
        <%= link_to "S'inscrire", new_registration_path(User), class: 'btn btn-night link-arrow-right' %>
      </div>
    </div>
    <div class="logo-round-call-to-action js-sticker">
      <%= image_tag 'surlaroute/stickers-right.svg', alt: "L’atlas des tournées à modes des doux - sur la route", class: 'stickers' %>
    </div>  </div>
</section>
