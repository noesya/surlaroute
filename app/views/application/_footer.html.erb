        <% end %>
      </div>
      <ul class="col-lg-3 mt-4 mt-lg-0">
        <li><%= link_to 'Atlas', map_actors_path(anchor: 'results') %></li>
        <li class="mt-2"><%= link_to Tour.model_name.human(count: 2), tours_path(region_slug: nil) %></li>
        <li class="mt-2"><%= link_to t('ecosystem'), actors_path(region_slug: nil) %></li>
      </ul>
      <ul class="col-lg-3 mt-4 mt-lg-0">
        <li>
          <% page_legal = Page.find_by(internal_identifier: 'mentions-legales') %>
