        <div>
          <span class="small"><%= t('footer.implementation.sponsored') %></span>
          <ul class="mt-3 footer-supports">
            <li><%= image_tag('surlaroute/logos-partners/encc.svg', alt: 'European Network of Cultural Centres', width: '150', height: '80', loading: 'lazy') %></li>
            <li><%= image_tag('surlaroute/logos-partners/nouvelle-aquitaine.svg', alt: 'Région Nouvelle Aquitaine', width: '60', height: '80', loading: 'lazy') %></li>
