          <% page_contact = Page.find_by(internal_identifier: 'contact') %>
          <%= link_to page_contact, page_path(page_contact) %>
        </li>
      </ul>
    </nav>
    <div class="row mt-4 align-items-center">
      <div class="offset-lg-6 col-lg-6 mt-5 mt-lg-0">
        <span class="small"><%= t('footer.implementation.title') %></span>
